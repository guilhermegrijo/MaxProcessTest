<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/phone_editText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="24dp"
        android:layout_marginRight="24dp"
        android:layout_weight="1"
        android:hint="Telefone">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/input"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:inputType="number"
            android:maxLength="11"
            android:nextFocusUp="@id/input"
            android:nextFocusLeft="@id/input" />
    </com.google.android.material.textfield.TextInputLayout>

    <Button
        android:id="@+id/add_phone_btn"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="57dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="24dp"
        android:layout_marginRight="24dp"
        android:nextFocusLeft="@id/phone_editText"
        android:nextFocusUp="@id/phone_editText"
        android:textSize="0sp"
        android:visibility="gone"
        app:icon="@drawable/ic_baseline_add_24"
        app:iconTint="@color/text_color_secondary" />

    <Button
        android:id="@+id/remove_phone_btn"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="57dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="24dp"
        android:layout_marginRight="24dp"
        android:nextFocusLeft="@id/input"
        android:nextFocusUp="@id/input"
        android:textSize="0sp"
        android:visibility="visible"
        app:icon="@drawable/ic_baseline_delete_24"
        app:iconTint="@color/text_color_secondary" />

</LinearLayout>